<section>
    <header>
        <h2>{{ legislation.year }} {{ legislation.type }} {{ legislation.number }}</h2>
        <h3>{{ legislation.title }}</h3>
    </header>
    <p>{{ legislation.synopsis }}</p>

    <table><tr><th>Amends Code</th><td>{{ legislation.amendsCode ? 'Yes' : 'No' }}</td></tr></table>
    {% if legislation.actions %}
    <table>
        {% for a in legislation.actions %}
        <tr><th>{{ a.name    }}</th>
            <td>{{ a.date    }}</td>
            <td>{{ a.outcome }}</td>
            <td>{{ a.vote    }}</td>
        </tr>
        {% endfor %}
    </table>
    {% endif %}

    {% if legislation.files %}
        {% for f in legislation.files %}
        <a class="download button" href="{{ f.url }}">Download</a>
        {% endfor %}
    {% endif %}

</section>
